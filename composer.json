{
    "name": "ifcastle/monolog",
    "description": "Monolog integration with IfCastle.",
    "type": "ifcastle-package",
    "license": "MIT",
    "keywords": ["log", "ifcastle", "monolog"],
    "extra": {
        "ifcastle-installer": {
            "package": {
                "name": "monolog",
                "bootloaders": [
                    "IfCastle\\Monolog\\Bootloader"
                ]
            }
        }
    },
    "autoload": {
        "psr-4": {
            "IfCastle\\Monolog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\Monolog\\": "./tests"
        }
    },
    "require": {
        "ifcastle/application": "^0.6.0",
        "monolog/monolog": "^3.7",
        "ifcastle/exceptions": "^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.60",
        "amphp/php-cs-fixer-config": "^2.1"
    }
}
